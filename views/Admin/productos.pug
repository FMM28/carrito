doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Productos del Ticket
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    .container.mt-4
      h1.text-center.mb-4 Productos del Ticket #{ticket.id_ticket}
      .table-responsive
        table.table.table-striped.table-hover
          thead.table-dark
            tr
              th #
              th Nombre del Producto
              th Cantidad
              th Precio
              th Subtotal
          tbody
            each producto in productos
                tr
                    td= producto.id_producto
                    td= producto.nombre
                    td= producto.cantidad
                    td $#{producto.precio}
                    td $#{producto.cantidad * producto.precio}

      br
      // Bot√≥n para regresar a la lista de tickets
      .text-center.mt-4
        a.btn.btn-primary(href="/admin/tickets") Volver a la Lista de Tickets

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
