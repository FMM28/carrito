doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Tickets de Compra
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#") Mis Tickets

    .container.mt-4
      h1.text-center.mb-4 Lista de Tickets de Compra
      .table-responsive
        table.table.table-striped.table-hover
          thead.table-dark
            tr
              th #
              th Usuario
              th Fecha
              th Hora
              th Total
              th Acciones
          tbody
            each ticket in tickets
              tr
                td= ticket.id_ticket
                td= ticket.id_usuario
                td= ticket.fecha
                td= ticket.hora
                td $#{ticket.total}
                td
                  form(action=`/tickets/delete/${ticket.id}`, method="POST", style="display:inline;")
                    button.btn.btn-danger.btn-sm Eliminar


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
