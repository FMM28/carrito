doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='/css/style.css')
    title Mis Compras
  body
    nav
      ul
        li
          if !user
            a(href='/users/login') Iniciar sesión
          else
            if rol == 'admin'
              a(href='/admin/tickets') Administración
            a(href='/perfil') Perfil
            a(href='/misCompras') Mis compras
            a(href='/users/logout') Cerrar sesión
    main
      section#compras
        if tickets && tickets.length > 0
          h1 Mis Tickets
          ul
            each ticket in tickets
              li.card
                .ticket-detalles
                  h3= `Ticket #${ticket.id_ticket}`
                  p Fecha: #{ticket.fecha}
                  p Hora: #{ticket.hora}
                  p Total: $#{ticket.total}
                  form(action="/tickets/detalle" method="post")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    input(type="hidden" name="id_ticket" value=ticket.id_ticket)
                    button(type="submit") Ver Detalle
        else
          h1 No tienes tickets registrados
    script(src='/js/codigo.js')
