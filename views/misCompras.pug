doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Mis Tickets
        link(rel='stylesheet' href='/css/style.css')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    body
        nav
            ul
                li
                    if !user
                        a(href='/users/login') Iniciar sesión

                    li
                        a(href='/') Inicio

                    li
                        a(href='/compras') Mis Tickets
                    li
                        a(href='/users/logout') Cerrar sesión

        .container.mt-5
            h1.text-center Mis Tickets

            if tickets.length
                table.table.table-striped.mt-4
                    thead
                        tr
                            th #ID
                            th Fecha
                            th Hora
                            th Total
                            th Acciones
                    tbody
                        each ticket in tickets
                            tr
                                td #{ticket.id_ticket}
                                td #{ticket.fecha}
                                td #{ticket.hora}
                                td $#{ticket.total.toFixed(2)}
                                td
                                    a.btn.btn-primary(href=`/compras/misCompras/${ticket.id_ticket}`) Ver Detalles
                                td
                                    a.btn.btn-primary(href=`/compras/pago/${ticket.id_ticket}`) Pagar
            else
                p.text-center.mt-5 No tienes tickets de compra.

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

