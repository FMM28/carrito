doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Mis Tickets
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand(href="/") Inicio
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                #navbarNav.collapse.navbar-collapse
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.active(href="/mis-tickets") Mis Tickets
                        li.nav-item
                            a.nav-link(href="/logout") Cerrar Sesi√≥n

        .container.mt-5
            h1.text-center Mis Tickets

            if tickets.length
                table.table.table-striped.mt-4
                    thead
                        tr
                            th #ID
                            th Fecha
                            th Hora
                            th Total
                            th Acciones
                    tbody
                        each ticket in tickets
                            tr
                                td #{ticket.id_ticket}
                                td #{ticket.fecha}
                                td #{ticket.hora}
                                td $#{ticket.total.toFixed(2)}
                                td
                                    a.btn.btn-primary(href=`/compras/misCompras/${ticket.id_ticket}`) Ver Detalles
                                td
                                    a.btn.btn-primary(href=`/compras/pago/${ticket.id_ticket}`) Pagar
            else
                p.text-center.mt-5 No tienes tickets de compra.

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

